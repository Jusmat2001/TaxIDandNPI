<Window x:Class="TaxIDandNPI.NewPracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Practice Window" Height="200" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closed="Window_Closed"  >
    <Grid Background="CornflowerBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NewPracticeBox" Margin="10" Grid.Row="0" Grid.ColumnSpan="2" ToolTip="" Text="Practice # - Name" GotFocus="NewPracticeBox_GotFocus"/>
        <TextBox x:Name="NewTidBox" Margin="10" Grid.Row="1" Grid.ColumnSpan="2" Text="Tax ID" GotFocus="NewTidBox_GotFocus"/>
        <TextBox x:Name="NewNpiBox" Margin="10" Grid.Row="2" Grid.ColumnSpan="2" Text="NPI" GotFocus="NewNpiBox_GotFocus"/>
        <Button x:Name="AddNewPracticeBtn" Grid.Row="3" Grid.Column="0" Margin="10" Content="Add" Click="AddNewPracticeBtn_Click" />
        <Button x:Name="CancelBtn" Grid.Row="3" Grid.Column="1" Margin="10" Content="Cancel" Click="CancelBtn_Click"/>
    </Grid>
</Window>
